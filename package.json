{
  "name": "lfd2-manager",
  "version": "1.0.0",
  "description": "Left 4 Dead 2 Mod Collection Manager",
  "private": true,
  "workspaces": [
    "website"
  ],
  "scripts": {
    "start": "npm run start:backend",
    "start:backend": "node db/server.js",
    "start:frontend": "cd website && npm start",
    "build": "npm run build:frontend",
    "build:frontend": "cd website && npm run build",
    "dev": "nodemon db/server.js",
    "install:all": "npm install && cd website && npm install"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.76.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "http-proxy-middleware": "^3.0.3",
    "mongodb": "^6.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
